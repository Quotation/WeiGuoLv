{
  "name": "微过滤",
  "version": "1.0.3",
  "manifest_version": 2,
  "description": "新浪微博过滤器，根据自定义规则，将不想看到的微博彻底隐藏。还可隐藏页面广告和花哨的栏目。",
  "homepage_url": "http://weiguolv.sinaapp.com",
  "update_url": "http://weiguolv.sinaapp.com/chrome/updates.xml",
  "icons": {
  	"16": "icon16.png",
  	"48": "icon48.png",
  	"128": "icon128.png"
  },
  "page_action": {
    "default_icon": "icon19.png",
    "default_popup": "pagePopup.html"
  },
  "options_page": "options.html",
  "permissions": [
  ],
  "content_scripts": [
    {
      "matches": ["http://*.weibo.com/*"],
      "js": ["jquery.js", "filter.js"]
    }
  ],
  "background": {
  	"scripts": ["background.js"]
  }
}